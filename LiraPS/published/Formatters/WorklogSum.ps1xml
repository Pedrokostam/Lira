<?xml version="1.0" encoding="utf-8" ?>
<Configuration
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/PowerShell/PowerShell/master/src/Schemas/Format.xsd">
	<ViewDefinitions>
		<View>
			<Name>WorklogSumTable</Name>
			<ViewSelectedBy>
				<TypeName>LiraPS.Wrappers.WorklogTimespanCalculatedGroup</TypeName>
			</ViewSelectedBy>
			<TableControl>
				<TableHeaders>
					<TableColumnHeader>
						<Label>TimeSpent</Label>
						<Alignment>Center</Alignment>
					</TableColumnHeader>
					<TableColumnHeader>
						<Label>Issues</Label>
						<Alignment>Center</Alignment>
					</TableColumnHeader>
					<TableColumnHeader>
						<Label>Worklogs</Label>
						<Alignment>Center</Alignment>
					</TableColumnHeader>
					<TableColumnHeader>
						<Label>Header</Label>
					</TableColumnHeader>
				</TableHeaders>
				<TableRowEntries>
					<TableRowEntry>
						<TableColumnItems>
							<TableColumnItem>
								<ScriptBlock>[LiraPS.Extensions.TimeExtensions]::PrettyTime($_.TimeSpent)</ScriptBlock>
							</TableColumnItem>
							<TableColumnItem>
								<ScriptBlock>
									if($_.IssueCount -ne 1){
									$_.IssueCount
									}else{
									$_.Issues[0].Key
									}
									</ScriptBlock>
							</TableColumnItem>
							<TableColumnItem>
								<ScriptBlock>$_.WorklogCount</ScriptBlock>
							</TableColumnItem>
							<TableColumnItem>
								<ScriptBlock>
									$_.ColumnValuesTexts -join "`e[2m => `e[0m"
								</ScriptBlock>
							</TableColumnItem>
						</TableColumnItems>
					</TableRowEntry>
				</TableRowEntries>
			</TableControl>
		</View>
		<!--LIST-->
		<View>
			<Name>Default</Name>
			<ViewSelectedBy>
				<TypeName>LiraPS.Wrappers.WorklogTimespanCalculatedGroup</TypeName>
			</ViewSelectedBy>
			<ListControl>
				<ListEntries>
					<ListEntry>
						<ListItems>
							<ListItem>
								<Label>Properties</Label>
								<ScriptBlock>
									$_.Columns -join " => "
								</ScriptBlock>
							</ListItem>
							<ListItem>
								<Label>Header</Label>
								<ScriptBlock>
									$_.ColumnValuesTexts -join "`n"
								</ScriptBlock>
							</ListItem>
							<ListItem>
								<Label>Worklogs</Label>
								<ScriptBlock>$_.WorklogCount</ScriptBlock>
							</ListItem>
							<ListItem>
								<Label>Issues</Label>
								<ScriptBlock>($_.Issues | % KeySummary) -join "`n"</ScriptBlock>
							</ListItem>
							<ListItem>
								<Label>Time</Label>
								<ScriptBlock>[LiraPS.Extensions.TimeExtensions]::PrettyTime($_.TimeSpent)</ScriptBlock>
							</ListItem>
						</ListItems>
					</ListEntry>
				</ListEntries>
			</ListControl>
		</View>
	</ViewDefinitions>
</Configuration>